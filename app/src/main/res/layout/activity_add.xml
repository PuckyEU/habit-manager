<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".AddActivity"
    tools:ignore="HardcodedText">

    <EditText
        android:id="@+id/name_input"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/tag_input"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Notes"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_input" />

    <EditText
        android:id="@+id/repeat_input"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="348dp"
        android:ems="10"
        android:hint="M,T,W,T,F,S,S"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.262"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tag_input" />

    <Button
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="164dp"
        android:text="Add"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/repeat_input"
        app:layout_constraintEnd_toEndOf="@+id/repeat_input"
        app:layout_constraintHorizontal_bias="0.893"
        app:layout_constraintStart_toStartOf="@+id/repeat_input" />

    <Button
        android:id="@+id/sunday_button"
        android:clickable="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/circle_button"
        android:text="S"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@color/design_default_color_background"
        app:layout_constraintEnd_toEndOf="@+id/tag_input"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tag_input"
        app:layout_constraintTop_toBottomOf="@+id/tag_input"
        />

    <Button
        android:id="@+id/monday_button"
        android:clickable="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/circle_button"
        android:text="M"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@color/design_default_color_background"
        app:layout_constraintLeft_toRightOf="@+id/sunday_button"
        app:layout_constraintStart_toStartOf="@+id/sunday_button"
        app:layout_constraintTop_toBottomOf="@+id/tag_input" />

    <Button
        android:id="@+id/tuesday_button"
        android:clickable="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/circle_button"
        android:text="T"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@color/design_default_color_background"
        app:layout_constraintStart_toStartOf="@+id/sunday_button"
        app:layout_constraintTop_toBottomOf="@+id/tag_input" />
    <Button
        android:id="@+id/wednesday_button"
        android:clickable="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/circle_button"
        android:text="W"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@color/design_default_color_background"
        app:layout_constraintStart_toStartOf="@+id/sunday_button"
        app:layout_constraintTop_toBottomOf="@+id/tag_input" />
    <Button
        android:id="@+id/thursday_button"
        android:clickable="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/circle_button"
        android:text="T"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@color/design_default_color_background"
        app:layout_constraintStart_toStartOf="@+id/sunday_button"
        app:layout_constraintTop_toBottomOf="@+id/tag_input" />
    <Button
        android:id="@+id/friday_button"
        android:clickable="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="250dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/circle_button"
        android:text="F"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@color/design_default_color_background"
        app:layout_constraintStart_toStartOf="@+id/sunday_button"
        app:layout_constraintTop_toBottomOf="@+id/tag_input" />
    <Button
        android:id="@+id/saturday_button"
        android:clickable="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="300dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/circle_button"
        android:text="S"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@color/design_default_color_background"
        app:layout_constraintStart_toStartOf="@+id/sunday_button"
        app:layout_constraintTop_toBottomOf="@+id/tag_input" />

</androidx.constraintlayout.widget.ConstraintLayout>