<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HabitsPrototype4" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_primary</item>
        <item name="colorSecondaryVariant">@color/color_primary</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:itemBackground">@color/white</item>
        <item name="textFillColor">@color/design_default_color_on_primary</item>
        <item name="android:actionMenuTextColor">@color/black</item>
    </style>

    <style name="Theme.HabitsPrototype4.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="themeBackground">
        <item name="android:background">@drawable/layout_bg</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="mcv_dateTextAppearance">@color/black</item>
    </style>
    <style name="themeFullBackground">
        <item name="android:background">@drawable/full_layout_bg</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="mcv_dateTextAppearance">@color/black</item>
    </style>

    <style name="theme_text">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ActionBar">
        <item name="background">@color/color_primary</item>
    </style>

    <style name="Theme.HabitsPrototype4.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.HabitsPrototype4.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>