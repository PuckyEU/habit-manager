<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HabitsPrototype4" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/dark_grey</item>
        <item name="colorOnPrimary">@color/dark_on_primary</item>
        <item name="colorOnBackground">@color/dark_on_background</item>
        <item name="colorOnSurface">@color/dark_on_surface</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_primary</item>
        <item name="colorSecondaryVariant">@color/color_primary</item>
        <item name="colorOnSecondary">@color/dark_on_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:itemBackground">@color/dark_grey</item>
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>


    <!-- Theme -->
    <style name="themeBackground">
        <item name="android:background">@drawable/layout_bg</item>
        <item name="android:backgroundTint">@color/dark_grey</item>
        <item name="mcv_dateTextAppearance">@color/white</item>
    </style>
    <style name="themeFullBackground">
        <item name="android:background">@drawable/full_layout_bg</item>
        <item name="android:backgroundTint">@color/dark_grey</item>
        <item name="mcv_dateTextAppearance">@color/white</item>
    </style>
    <style name="theme_text">
        <item name="android:textColor">@color/dark_on_background</item>
    </style>
    <style name="setting_category">
        <item name="android:textColor">@color/color_primary</item>
    </style>

    <!-- Calendar -->
    <style name="weekday_buttons">
        <item name="android:background">@drawable/circle_button</item>
        <item name="android:backgroundTint">@color/dark_grey</item>
        <item name="android:state_pressed">true</item>
    </style>
    <style name="CalendarAllDays">
        <item name="android:textColor">@color/dark_on_background</item>
    </style>
    <style name="CalendarDayToday">
        <item name="android:textColor">@color/dark_on_background</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Animations -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

    <!-- App Bar -->
    <style name="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="ActionBar">
        <item name="background">@color/dark_grey</item>
    </style>

    <style name="Theme.HabitsPrototype4.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight"/>
</resources>